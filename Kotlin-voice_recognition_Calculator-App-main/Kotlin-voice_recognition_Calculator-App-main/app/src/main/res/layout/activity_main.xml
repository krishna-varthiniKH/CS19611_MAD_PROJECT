<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/userInput"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:textSize="35dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/result"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="35dp"
            android:layout_margin="20dp"
            />

    </LinearLayout>


    <LinearLayout

        style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn_ac"
            android:text="AC">

        </Button>

        <Button
            android:id="@+id/btn_del"
            style="@style/buttonNumber"
            android:text="⬅️">


        </Button>

        <Button
            style="@style/buttonNumber">

        </Button>

        <Button
            style="@style/buttonOperations"
            android:id="@+id/btn_div"
            android:text="/">

        </Button>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:id="@+id/num7"
            android:text="7">

        </Button>

        <Button
            style="@style/buttonNumber"
            android:id="@+id/num8"
            android:text="8">

        </Button>

        <Button
            style="@style/buttonNumber"
            android:id="@+id/num9"
            android:text="9">

        </Button>

        <Button
            style="@style/buttonOperations"
            android:id="@+id/btn_mul"
            android:text="X">

        </Button>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:id="@+id/num4"
            android:text="4">

        </Button>

        <Button
            style="@style/buttonNumber"
            android:id="@+id/num5"
            android:text="5">

        </Button>

        <Button
            style="@style/buttonNumber"
            android:id="@+id/num6"
            android:text="6">

        </Button>

        <Button
            style="@style/buttonOperations"
            android:id="@+id/btn_sub"
            android:text="-">

        </Button>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:id="@+id/num1"
            android:text="1">

        </Button>

        <Button
            style="@style/buttonNumber"
            android:id="@+id/num2"
            android:text="2">

        </Button>

        <Button
            style="@style/buttonNumber"
            android:id="@+id/num3"
            android:text="3">

        </Button>

        <Button
            style="@style/buttonOperations"
            android:id="@+id/btn_add"
            android:text="+">

        </Button>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn_dot"
            android:text=".">

        </Button>

        <Button
            style="@style/buttonNumber"
            android:id="@+id/num0"
            android:text="0">

        </Button>

        <Button
            style="@style/buttonNumber">

        </Button>

        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn_equal"
            android:text="="
            android:layout_weight="2"
            android:background="@color/Orange">

        </Button>

    </LinearLayout>




</LinearLayout>